\end_layout

\begin_layout Plain Layout

    this.score += (this.multipleHit * 20);
\end_layout

\begin_layout Plain Layout

    this.shot=1;
\end_layout

\begin_layout Plain Layout

    this.ships[this.shipGrid[gridIndex]].hits++;
\end_layout

\begin_layout Plain Layout

    this.shots[gridIndex] = 2;
\end_layout

\begin_layout Plain Layout

    return true;
\end_layout

\begin_layout Plain Layout

  } else {
\end_layout

\begin_layout Plain Layout

    // Miss
\end_layout

\begin_layout Plain Layout

